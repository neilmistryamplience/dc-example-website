{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://www.amplience.com/examples/blogSnippet.json",
	"title": "Blog Snippet",
	"description": "Key information for indexing and displaying a blog post",
	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	"type": "object",
	"properties": {
		"image": {
			"type": "object",
			"title": "Image",
			"description": "Image to show in the snippet",
			"allOf": [
				{
					"$ref": "https://www.amplience.com/examples/image.json"
				}
			]
		},
		"title": {
			"type": "string",
			"title": "Title",
			"description": "Blog post title",
			"validation": "Please enter less than 255 characters",
			"minLength": 0,
			"maxLength": 255
		},
		"description": {
			"type": "string",
			"title": "Snippet Description",
			"description": "Blog post description",
			"validation": "Please enter less than 500 characters",
			"minLength": 0,
			"maxLength": 500
		},
		"cta": {
			"type": "object",
			"title": "Call to action",
			"description": "The location of the blog post",
			"anyOf": [
				{
					"$ref": "https://www.amplience.com/examples/link.json"
				}
			],
			"_interpolate": true
		},
		"category": {
			"type": "array",
			"title": "Category",
			"description": "The name of the category this relates too",
			"items": {
				"type": "string",
				"enum": [
					"women",
					"men",
					"beauty",
					"lighting",
					"furniture",
					"electricals",
					"inspiration"
				]
			}
		},
		"keywords": {
			"type": "array",
			"title": "Keywords",
			"description": "Keywords",
			"validation": "",
			"items": {
				"type": "string",
				"title": "label",
				"description": "keyword",
				"validation": "keyword",
				"minLength": 0,
				"maxLength": 500
			},
			"minItems": 0,
			"maxItems": 50
		},
		"author": {
			"type": "string",
			"title": "Author",
			"description": "The author of the post",
			"enum": [
				"Hazel Nutkins",
				"Macadamia Smith",
				"Sally Almond",
				"Desmond Cobnut",
				"Jose Pistachio"
			]
		},
		"blogdate": {
			"type": "string",
			"title": "Creation Date",
			"description": "Enter date (yyyy/mm/dd) that blog is created",
			"validation": "YYYY/MM/DD",
			"format": "text",
			"minLength": 0,
			"maxLength": 10
		}
	},
	"propertyOrder": [
		"blogdate",
		"category",
		"image",
		"title",
		"description",
		"cta",
		"keywords",
		"author"
	]
}