{{#*inline "image-src"}}//{{diImage.image.defaultHost}}/i/{{diImage.image.endpoint}}/{{escapeUrl diImage.image.name}}{{#if seoText}}/{{escapeUrl seoText}}{{/if}}{{#if format}}.{{format}}{{/if}}?w={{width}}&upscale=false&strip=true{{#if diImage.query}}&{{{diImage.query}}}{{/if}}{{#compare display '==' 'Point of Interest'}}&$poi_old$&aspect={{poiAspect}}{{/compare}}{{#roundelProperties}}&$roundel$&{{roundelConfig roundel}}{{/roundelProperties}}{{/inline}}

{{#*inline "source"}}

  <source srcset="{{> image-src width=width }} 1x, {{> image-src width=highDensityWidth }} 2x"
        media="({{#if minWidth}}min-width: {{minWidth}}px{{/if}}{{#if maxWidth}}max-width: {{maxWidth}}px{{/if}})"
        {{#if format}}type="image/{{format}}"{{/if}}>

{{/inline}}

{{#iff diImage.image.name '==' 'back_to_school'}}
    <picture class="amp-dc-image">
        <img src="//miguel.a.bigcontent.io/v1/static/back_to_school"
             class="amp-dc-image-pic" {{#if imageAltText}} alt="{{imageAltText}}" {{/if}}/>
    </picture>
{{else}}
    <picture class="amp-dc-image">
        {{> source minWidth="2048" width="2560" highDensityWidth="5120" format="webp" poiAspect="5:3" }}
        {{> source minWidth="2048" width="2560" highDensityWidth="5120" poiAspect="5:3" }}
        {{> source minWidth="1280" width="1600" highDensityWidth="3200" format="webp" poiAspect="5:3" }}
        {{> source minWidth="1280" width="1600" highDensityWidth="3200" poiAspect="5:3" }}
        {{> source minWidth="1024" width="1280" highDensityWidth="2560" format="webp" poiAspect="2:1" }}
        {{> source minWidth="1024" width="1280" highDensityWidth="2560" poiAspect="2:1" }}
        {{> source minWidth="768" width="1024" highDensityWidth="2048" format="webp" poiAspect="2:1" }}
        {{> source minWidth="768" width="1024" highDensityWidth="2048" poiAspect="2:1" }}
        {{> source maxWidth="768" width="768" highDensityWidth="1536" format="webp" poiAspect="1:1" }}
        {{> source maxWidth="768" width="768" highDensityWidth="1536" poiAspect="1:1" }}
        {{> source maxWidth="320" width="320" highDensityWidth="640" format="webp" poiAspect="1:2" }}
        {{> source maxWidth="320" width="320" highDensityWidth="640" poiAspect="1:2" }}

        <img src="{{> image-src width="1600" }}" class="amp-dc-image-pic" {{#if imageAltText}} alt="{{imageAltText}}" {{/if}}/>

    </picture>
{{/iff}}
