{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/emily/content-types/video.json",
  "title": "Video",
  "description": "A reusable component to display a video",
  "allOf": [
    {
        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
      "video": {
          "type": "object",
          "title": "Video",
          "description": "The video to display",
          "anyOf": [
            {
              "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/video-link"
            }
          ]
      },
      "Autoplay": {
          "title": "Autoplay",
          "description": "Autoplay Video",
          "type": "boolean"
      },
      "Controls": {
          "title": "Controls",
          "description": "Control visible",
          "type": "boolean"
      },
      "Loop": {
          "title": "Loop",
          "description": "Loop Video",
          "type": "boolean"
      },
      "Link": {
          "title": "Link",
          "description": "Link video",
          "type": "string",
          "minLength": 0,
          "maxLength": 200
      }
  }
}
