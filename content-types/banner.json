{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/banner.json",
  "title": "Banner",
  "description": "A reusable content type for banner content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "title": "Meta Data",
      "description": "Meta data related to this content",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/metadata.json"
        }
      ]
    },
    "img": {
      "type": "object",
      "title": "Image",
      "description": "The background image for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/image.json"
        }
      ]
    },
    "contentImg": {
      "type": "object",
      "title": "Content Image",
      "description": "The image to display with the textual content for this banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/image.json"
        }
      ]
    },
    "header": {
      "type": "string",
      "title": "Header",
      "description": "Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "header_fr-FR": {
      "type": "string",
      "title": "Header (fr-FR)",
      "description": "French Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "header_de-DE": {
      "type": "string",
      "title": "Header (de-DE)",
      "description": "German Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "subheader": {
      "type": "string",
      "title": "Subheader",
      "description": "Sub header text for the banner",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Description text for the banner",
      "validation": "Please enter less than 2000 characters",
      "minLength": 0,
      "maxLength": 2000
    },
    "button": {
      "type": "object",
      "title": "Link / Button",
      "description": "The action link / button for the banner",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/dc-example-website/anyafinn/content-types/link.json"
        }
      ],
      "_interpolate": true
    },
    "alignment": {
      "type": "string",
      "title": "Alignment",
      "description": "Alignment of the text content in the banner (left/right). Default is left",
      "enum": [
        "left",
        "right",
        "center"
      ]
    },
    "precH": {
      "title": "Horizontal alignment percentage",
      "description": "A value between -100 and 100 (e.g. 30) Default is 0",
      "type": "number",
      "minimum": -100,
      "maximum": 100
    },
    "percV": {
      "title": "Vertical alignment percentage",
      "description": "A value between -100 and 100 (e.g. 30) Default is 0",
      "type": "number",
      "minimum": -100,
      "maximum": 100
    },
    "style": {
      "type": "string",
      "title": "Style",
      "description": "Add classname for CSS styling",
      "validation": "Please enter between 0 and 100 characters",
      "minLength": 0,
      "maxLength": 100
    },
    "stackMobileLayout": {
      "type": "boolean",
      "title": "Stack Mobile Layout",
      "description": "Enable to allow banner text to stack underneath the image on small screens. Default is false"
    }
  },
  "propertyOrder": [
    "metadata",
    "img",
    "contentImg",
    "header",
    "header_fr-FR",
    "header_de-DE",
    "subheader",
    "description",
    "button",
    "alignment",
    "precH",
    "precV",
    "style",
    "stackMobileLayout"
  ]
}