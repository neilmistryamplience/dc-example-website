{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/slider/content-type/slider.json",
  "title": "Slider",
  "description": "Contains Images, Videos & Banners to produce a slider / carousel",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "slides": {
      "type": "array",
      "title": "Slides",
      "description": "Select from banners, images and videos to use in this slider",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/banner/content-type/banner.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/image/content-type/image.json",
                  "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/video/content-type/video.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 8
    },
    "loop": {
      "type": "boolean",
      "title": "Loop slider",
      "description": "Infinite slide looping"
    },
    "navigationDots": {
      "type": "boolean",
      "title": "Navigation Dots",
      "description": "Display Navigation dots?"
    }
  }
}